{
  "categories": [
    {
      "title": "## üöÄ Features",
      "labels": ["feature", "enhancement"]
    },
    {
      "title": "## üêõ Bug Fixes",
      "labels": ["bug", "fix", "bugfix"]
    },
    {
      "title": "## üîß Maintenance",
      "labels": ["chore", "maintenance", "refactor"]
    },
    {
      "title": "## üìö Documentation",
      "labels": ["documentation", "docs"]
    },
    {
      "title": "## ‚ö†Ô∏è Breaking Changes",
      "labels": ["breaking", "breaking-change"]
    },
    {
      "title": "## üîí Security",
      "labels": ["security"]
    }
  ],
  "ignore_labels": [
    "ignore",
    "no-changelog",
    "skip-changelog"
  ],
  "sort": {
    "order": "ASC",
    "on_property": "mergedAt"
  },
  "template": "${{CHANGELOG}}\n\n**Full Changelog**: ${{RELEASE_DIFF}}",
  "pr_template": "- ${{TITLE}} by @${{AUTHOR}} in #${{NUMBER}}",
  "empty_template": "- No changes",
  "label_extractor": [
    {
      "pattern": "^(feat|feature)\\s*:",
      "on_property": "title",
      "method": "regexp",
      "flags": "i",
      "labels": ["feature"]
    },
    {
      "pattern": "^fix\\s*:",
      "on_property": "title", 
      "method": "regexp",
      "flags": "i",
      "labels": ["bug"]
    },
    {
      "pattern": "^docs\\s*:",
      "on_property": "title",
      "method": "regexp", 
      "flags": "i",
      "labels": ["documentation"]
    },
    {
      "pattern": "BREAKING CHANGE",
      "on_property": "body",
      "method": "match",
      "flags": "i",
      "labels": ["breaking"]
    }
  ],
  "duplicate_filter": {
    "pattern": "^(Merge pull request|Merge branch)",
    "on_property": "title",
    "method": "regexp"
  },
  "transformers": [
    {
      "pattern": "\\s*\\(#(\\d+)\\)\\s*$",
      "on_property": "title",
      "method": "regexp"
    }
  ],
  "max_tags_to_fetch": 200,
  "max_pull_requests": 200,
  "max_back_track_time_days": 365,
  "exclude_merge_branches": []
}
