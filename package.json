{
  "name": "mcp-vscode-commands",
  "displayName": "MCP VSCode Commands",
  "description": "允許 AI 透過 VS Code 原生 Model Context Protocol 執行 VSCode 命令 - 零配置、原生整合",
  "version": "0.1.3",
  "author": "louisfghbvc",
  "publisher": "louisfghbvc",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "mcp-native",
    "llm",
    "ai",
    "cursor",
    "claude",
    "vscode-commands",
    "automation",
    "agent-mode",
    "stdio"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/louisfghbvc/mcp-vscode-commands.git"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "mcpServerDefinitionProviders": [
      {
        "id": "vscodeCommandsProvider",
        "label": "VSCode Commands MCP Server Provider"
      }
    ],
    "commands": [
      {
        "command": "mcp-vscode-commands.cleanLegacyConfig",
        "title": "Clean Legacy Config",
        "category": "MCP"
      },
      {
        "command": "mcp-vscode-commands.showMigrationReport",
        "title": "Show Migration Report",
        "category": "MCP"
      }
    ],
    "configuration": {
      "title": "MCP VSCode Commands",
      "properties": {
        "mcpVscodeCommands.logLevel": {
          "type": "string",
          "enum": ["debug", "info", "warn", "error"],
          "default": "info",
          "description": "日誌記錄級別"
        },
        "mcpVscodeCommands.showWelcomeMessage": {
          "type": "boolean",
          "default": true,
          "description": "顯示歡迎訊息當擴展升級到原生模式時"
        },
        "mcpVscodeCommands.showMigrationNotifications": {
          "type": "boolean",
          "default": true,
          "description": "檢測到舊配置時顯示遷移通知"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^18.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "zod": "^3.22.4"
  }
}
