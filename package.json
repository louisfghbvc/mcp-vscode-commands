{
  "name": "mcp-vscode-commands",
  "displayName": "MCP VSCode Commands",
  "description": "允許 AI 透過 Model Context Protocol (SSE) 執行 VSCode 命令 - 自動配置、動態端口",
  "version": "0.1.3",
  "author": "louisfghbvc",
  "publisher": "louisfghbvc",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "llm",
    "ai",
    "cursor",
    "claude",
    "sse",
    "server-sent-events",
    "vscode-commands",
    "automation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/louisfghbvc/mcp-vscode-commands.git"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mcp-vscode-commands.start",
        "title": "Start MCP Server"
      },
      {
        "command": "mcp-vscode-commands.stop", 
        "title": "Stop MCP Server"
      },
      {
        "command": "mcp-vscode-commands.status",
        "title": "Show MCP Server Status"
      }
    ],
    "configuration": {
      "title": "MCP VSCode Commands",
      "properties": {
        "mcpVscodeCommands.autoStart": {
          "type": "boolean",
          "default": true,
          "description": "擴展啟動時自動啟動 MCP 服務器"
        },
        "mcpVscodeCommands.logLevel": {
          "type": "string",
          "enum": ["debug", "info", "warn", "error"],
          "default": "info",
          "description": "日誌記錄級別"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "^18.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "zod": "^3.22.4"
  }
}
